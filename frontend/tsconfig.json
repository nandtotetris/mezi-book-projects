{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "es6",
      "dom",
      "esnext"
    ]
  },
  "include": [
    "src",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "extends": "./paths.json"
}
