{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    // "resolveJsonModule": true,
    // "strict": true,
    // "noUnusedLocals": true
    // "strictNullChecks": true
  },
  "exclude": [
    "frontend",
    "node_modules",
    "dist"
  ]
}
