{
  "name": "libeo",
  "version": "1.0.0",
  "description": "libeo",
  "author": "Adfab Dev Team <dev@adfab.fr>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "NODE_ENV=development nodemon",
    "debug": "nodemon --config nodemon-debug.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "pm2-runtime start pm2-config.json",
    "lint": "tslint --fix -p tsconfig.json -c tslint.json",
    "test": "jest",
    "precommit": "lint-staged",
    "test:ci": "jest --all --ci --color --coverage --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config=e2e/jest-e2e.json --forceExit --detectOpenHandles --ci --color",
    "test:e2e:watch": "jest --watch --config=e2e/jest-e2e.json",
    "sentry": "node createReleaseOnSentry.js",
    "typeorm": "ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@nestjs/common": "^6.1.1",
    "@nestjs/core": "^6.1.1",
    "@nestjs/graphql": "^6.0.5",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/passport": "^6.0.0",
    "@nestjs/platform-express": "^6.1.1",
    "@nestjs/typeorm": "^6.0.0",
    "@sentry/node": "5.0.8",
    "@types/graphql-type-json": "^0.1.3",
    "@types/raven": "^2.5.1",
    "@types/request-promise-native": "^1.0.15",
    "@types/uuid": "^3.4.4",
    "apollo-server-express": "^2.3.1",
    "aws-sdk": "^2.444.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "cli-color": "^1.4.0",
    "exif-be-gone": "^1.0.0",
    "express": "^4.16.4",
    "fast-csv": "^2.4.1",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.3",
    "graphql-upload": "^8.0.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.6",
    "mime-types": "^2.1.24",
    "moment": "^2.24.0",
    "moment-business-days": "^1.1.3",
    "nest-raven": "^4.0.0",
    "nest-schedule": "^0.4.5",
    "nestjs-config": "^1.2.9-alpha",
    "nestjs-translate": "^1.0.0-beta",
    "node-mailjet": "^3.3.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-oauth2": "^1.4.0",
    "pg": "^7.7.1",
    "pm2": "^3.2.4",
    "raven": "^2.6.4",
    "reflect-metadata": "^0.1.12",
    "request-context": "^2.0.0",
    "request-promise-native": "^1.0.5",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "shortid": "^2.2.14",
    "typeorm": "^0.2.17",
    "typescript": "^3.0.1",
    "uuid": "^3.3.2",
    "zendesk-node-api": "^1.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^5.7.1",
    "@nestjs/testing": "6.2.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^10.7.1",
    "@types/node-mailjet": "^3.3.0",
    "@types/shortid": "^0.0.29",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "jest-junit": "^5.2.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "sql.js": "^0.5.0",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "tslint-microsoft-contrib": "^6.1.1"
  },
  "jest-junit": {
    "outputDirectory": "build/test",
    "outputName": "xunit.xml"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../build/coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn lint",
      "git add"
    ]
  }
}
